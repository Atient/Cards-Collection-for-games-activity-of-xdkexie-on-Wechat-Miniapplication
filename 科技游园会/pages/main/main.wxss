page{

  display: flex;
  padding-bottom: 5rpx;
  /* background-color: lightcyan; */
  background-image: url("https://www.webjoker.top/collection/background.png");
  background-size: cover;
}

.title-box
{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align-last: center;
  width: 100%;
  height: 100rpx;
  background: black;
  opacity: 0.8;
}

.title-text
{
  font-size: 2ex;
  color: white; 
}

.owner-text
{
  font-size: 1ex;
  color: white;
}

.puzzle-box
{
  flex-direction: column;
  height: 930rpx;
  margin: 20rpx;
  background: linear-gradient(black,lightskyblue,burlywood);
  border-radius: 10rpx;
  opacity: 1;
}

.puzzle-flex-row1
{
  display: flex;
  flex-direction: row;
  margin: 0rpx;
  height: 40%;
}

.puzzle-flex-row2
{
  display: flex;
  flex-direction: row;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  height: 34%;
}

.puzzle-item1
{
  margin-top: 15rpx;
  margin-left: 12rpx;
  margin-right: 12rpx;
  margin-bottom: 4rpx;
  border-radius: 10rpx;
  background: white;
  height: 20%;
  width: 96.6%;
}

.puzzle-item2
{
  margin-left: 12rpx;
  margin-right: 12rpx;
  border-radius: 10rpx;
  background: white;
  width: 30%;
  height: 100%;
}

.puzzle-item3
{
  background: white;
  border-radius: 10rpx;
  width: 36.2%;
  height: 100%;
}

.puzzle-item4
{
  margin: 8rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  background: white;
  width: 48.6%;
  height: 100%;
}

.button-group{
  display: flex;
  flex: row;
  
}

.scan-button
{
  width: 45%;
  color: white;
  margin: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 100rpx;
  background-color: burlywood;
  opacity: 0.8;
}

.gift-button
{
  width: 45%;
  color: white;
  margin: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 100rpx;
  opacity: 0.8;
}

.modal-show{
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-radius: 10rpx;
  margin-top: 20%;
  margin-left: 20%;
  position: fixed;
  background: burlywood;
  height: 60%;
  width: 60%;
  opacity: 0.85;
}

.modal-hide{
  display: none;
}

.show-button{
  position: fixed;
  height: 60rpx;
  width: 200rpx;
  margin-left: 78%;
  margin-top: 5rpx; 
  background: black;
  color: white;
  font-size: 10px;
}

.rule-title{
  margin-left: 34%;
  margin-top: 5rpx;
  color: white;
  font-size: 18px;
}

.rule-text{
  margin-top: 10rpx;
  margin-left: 15rpx;
  margin-right: 8rpx;
  font-size: 12px;
  color: white;
}

.remind-text{
  margin: 15rpx;
  margin-left: 40%;
  font-size: 12px;
  color: white;
}

.success-show{
  display: flex;
  flex-direction: column;
  text-align-last: center;
  justify-content: center;
  border-radius: 10rpx;
  margin-top: 35%;
  margin-left: 20%;
  position: fixed;
  background: burlywood;
  height: 30%;
  width: 60%;
  opacity: 0.85;
}

.success-title{
  margin-top: 5rpx;
  color: white;
  font-size: 20px;
}

.total{
  margin: 15rpx;
  font-size: 14px;
  color: white;
}

.confirm-button{
  margin-top: 30rpx;
  margin: 15rpx;
  background-color: orange;
  color: white;
  font-size: 16px;
}